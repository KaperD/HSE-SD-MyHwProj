<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Homework</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jquery-ui-dist@1.13.1/jquery-ui.min.css">
</head>
<body>
<div class="container pt-3">
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler"
                    aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="navbar-nav align-content-center">
                    <li class="nav-item mt-3">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-auto ">
                                    <button class="btn rounded-pill bg-primary">
                                        <a class="nav-link active text-white" aria-current="page"
                                           href="/student/homeworks">Home</a>
                                    </button>
                                </div>
                                <div class="col-auto">
                                    <div class="nav-item mt-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                                             fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                  d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item mt-3 ms-3">
                        <button type="button" class="btn rounded-pill btn-outline-dark" disabled>
                            <a class="nav-link text-black" href="#">Homework</a>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="container pt-4 pb-0 ">
    <div class="row ">
        <div class="col-12 text-start">
            <h1 class="display-2">{{.Homework.Name}}</h1>
        </div>
    </div>
    <hr/>
    <p class="lead">
        {{.Homework.Task}}
    </p>
</div>
<div class="container pt-4 pb-0 ">
    <div class="row ">
        <div class="col-6 text-start">
            <h1 class="display-3">Submissions</h1>
        </div>
        <div class="col-6 text-end pt-md-3 pt-2">
            <div type="button" class="btn btn-outline-dark rounded-pill" data-bs-toggle="modal"
                 data-bs-target="#exampleModal">
                <div class="display-6">Create</div>
            </div>
        </div>
    </div>
    <hr/>
</div>
<div class="container text-center pt-3">
    {{if not .Submissions}}
        <p class="lead m-2">No submission yet</p>
    {{end}}
    {{range .Submissions}}
        <div class="row m-2">
            <a href="/student/submissions/{{.Id}}" type="button"
               class="btn btn-outline-dark rounded-pill mw-100 mh-100">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-md-3  m-0 py-2 h4">
                            #{{.Id}}
                        </div>
                        <div class="col-md-6 h4 m-0 py-2">
                            {{.Mark}}/10
                        </div>
                        <div class="col-md-3 py-2">
                            {{.Datetime.Format "Jan 02, 2006 15:04 MSK"}}
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {{end}}
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content rounded-3">
            <div class="modal-header">
                <h4 class="modal-title " id="exampleModalLabel">New submission</h4>
                <button type="button" class="btn btn-outline-dark rounded-pill close" data-bs-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="solution" class="col-form-label">Link to a solution:</label>
                        <input type="url" class="form-control rounded-3 border border-dark" id="solution"
                               placeholder="https://github.com/">
                    </div>
                </form>
            </div>
            <div id="modalFooter" class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Close
                </button>
                <button id="newSubmission" type="button" class="btn btn-outline-dark rounded-pill">Submit</button>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-ui-dist@1.13.1/jquery-ui.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script>
    function showLoading(createHolder, createButton) {
        createHolder.prepend(
            '<div class="spinner-border me-2" role="status"></div>'
        );
        createButton.prop('disabled', true);
    }

    function isLoading(createHolder, createButton) {
        return createButton.attr('disabled') === 'true';
    }

    function removeLoading(createHolder, createButton) {
        createHolder.children().first().remove();
        createButton.attr('disabled', false);
    }

    function successCreation(data) {
        location.replace("/student/homeworks/{{.Homework.Id}}");
    }

    function failedCreation(data) {
        const alertCode = `
        <div id="alert" class="alert alert-danger d-flex align-items-center alert-dismissible fade show border border-danger border-2" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill red" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            <div class="ms-3">
                Cannot submit with the provided data
            </div>
            <button id="alertClose" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    `
        const alertBlock = $("#alert");
        if (alertBlock.length !== 0) {
            alertBlock.effect("shake");
        } else {
            $("form").before(alertCode);
        }
    }

    $(document).ready(function () {
        $("#newSubmission").click(function () {
            const createHolder = $("#modalFooter");
            const createButton = $(this);

            if (isLoading(createHolder, createButton)) {
                return;
            }

            showLoading(createHolder, createButton);

            const newSubmission = {
                solution: $("#solution").val(),
            };

            $.post({
                url: "/v1/student/homeworks/{{.Homework.Id}}/submissions",
                data: JSON.stringify(newSubmission),
                contentType: "application/json",
                dataType: "json"
            }).done(successCreation).fail(function (data) {
                removeLoading(createHolder, createButton);
                failedCreation(data)
            });
        });
    });
</script>
</body>
</html>